.jobs
	background url('../../blocks/b-jobs/b-jobs/jobs-bg.jpg') no-repeat -150px -320px
	border-bottom 2px solid #b5c4c4
	padding-bottom 40px
.section__title
	width 55%
	margin 0 auto
	text-align center
	padding 60px 0
	h2
		margin 0
		font-size (42.9/14)rem
		text-transform uppercase
		letter-spacing 1rem
		color bgcolorMF
		font-weight 100
	span
		img
			padding 25px 0
	p
		margin 0
		color #8198a0
		font-size (18/14)rem
		
.jobs-blocks
	display flex
	flex-direction row
	flex-wrap wrap
.block
	position relative
	background-color bgcolorMF
	height 320px
	flex 1
	margin 0 20px 20px 20px
	cursor pointer
	&:hover > .block-1
	&:hover > .block-2
	&:hover > .block-3
	&:hover > .block-4
	&:hover > .block-5
	&:hover > .block-6
		overflow visible
		height 105px
	.block-logo
		display block
		position absolute
		top 0
		bottom 0
		right 0
		left 0
		margin auto
		
.block-1
.block-2
.block-3
.block-4
.block-5
.block-6
	width 100%
	height 0px
	background-color #d4d7d8
	position absolute
	bottom 0
	overflow hidden
	transition all .2s ease
	h5
		margin 0
		font-size (18/14)rem
		color bgcolorMF
		text-transform uppercase
		padding 15px 0 10px 55px
	p
		color #7b7b7b
		text-transform uppercase
		font-size (16/14)rem
		margin 0
		padding 10px 0 15px 55px
	span
		padding-left 55px
		
@media (max-width 1024px)
	.block
		height 250px
	.block-1
	.block-2
	.block-3
	.block-4
	.block-5
	.block-6
		h5
			font-size (15/14)rem
			padding-left 20px
		p
			font-size (13/14)rem
			padding-left 20px
			
@media (max-width 768px)
	.block
		height 200px