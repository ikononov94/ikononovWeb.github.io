-var block_alt = ["block1","block2","block3","block4","block5","block5"];
mixin jobs-blocks__block(alt)
	.jobs-blocks__block
		img(class="jobs-blocks__logo" src="./blocks/b-jobs/b-jobs/jobs-block-img.png" alt=alt)
		.jobs-blocks__block-hidden
			h5 Название работы
			span
				img(src="./blocks/b-jobs/b-jobs/separator.png" alt="")
			p Описание работы
section#navjobs.jobs
	.container
		.section__title
			h2 Наша работа
			img(src="./blocks/b-jobs/b-jobs/separator.png" alt="")
			p  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Omnis blanditiis similique libero, vero doloribus, beatae quis laudantium obcaecati. Eligendi ab expedita, libero quo nisi iure sed eius aut earum commodi.
		
		.jobs-blocks
			for alt in block_alt
				+jobs-blocks__block(alt)