.footer
	background bgcolorMF url('../../blocks/b-footer/b-footer/footer-bg.png') no-repeat center center
	padding 60px 0
.footer-blocks
	display flex
	flex-direction row
	justify-content space-between
	.block-left
		.separ
			display block
	span
		display block
		color #fff
		font-size 1.14rem
		font-weight 700
		text-transform uppercase
	p
		color #fff
		font-size 1rem

	.block-left
		img
			margin-bottom 20px
		a
			display block
	.block-center
	.block-right
		span
			margin-bottom 40px
		img
			margin-bottom 20px
		p 
			margin 0
			width 200px
			text-align right
	.block-center
		.social
			img
				margin 0 10px
				transform rotate(0deg)
				transition all .5s ease
				&:hover
					transform rotate(360deg)
		
.text-left
	text-align left
	
.text-right
	text-align right
	
.text-center
	text-align center
	
.footer-end
	background-color bgcolorFb
	padding 25px 0
	color #fff
	text-transform uppercase
	letter-spacing 2px
	border-bottom 2px solid btncolor
	
#btn-toTop
	padding 5px 10px
	border 2px solid btncolor
	position fixed
	right 5%
	bottom 30px
	cursor pointer
	border-radius 8px
	z-index 999
	display none
	transition all .5s ease
	&:hover
		background-color bgcolorMF
		border 2px solid bgcolorMF

.navpagination
	position fixed
	bottom 43%
	right 20px
	z-index 999
	a
		display block
		width 18px
		height 18px
		background-color bgcolorMF
		border-radius 50%
		margin-bottom 10px	
		cursor pointer
		opacity .5
	.pag-active
		background-color btncolor
		opacity 1

.modal
	display none
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	overflow hidden
	background-color rgba(0,0,0, 0.8)
	z-index 9999
	&-content
		position relative
		background-color #fefefe
		margin 10% auto
		padding 20px
		border 1px solid #888
		width 20%
		border-radius 10px
		h4
			text-transform uppercase
			margin-top 0
			font-size  2rem
		label
		span
			display block
			text-align center
			padding 10px
			text-transform uppercase
			font-weight 700
			font-size 1.2rem
		input
			outline none
			border none
			border-bottom 1px solid #e5e5e5
			width 80%
			&::placeholder
				font-style italic
				padding 0 0 0 10px
.btn-modal
	margin 10px	
	padding 10px 20px		
			
.close
	position absolute
	top -40px
	right 0
	color #fff
	font-size 28px
	font-weight 700
	cursor pointer
	
@media (max-width 1024px)
	.block-left
		margin-left 20px
	.block-right
		margin-right 20px
	.modal-content
		width 40%

@media (max-width 480px)
	.modal-content
		width 70%
	.navpagination
		display none
	.footer-blocks
		flex-wrap wrap
		span
			font-size 1.4rem
		p
			font-size 1.4rem
		.block-left
			img
				margin-bottom 10px
			a
				img
					width 70%
		.block-center
		.block-right
			span
				margin-bottom 50px !important
			img
				margin-bottom 20px !important
		.block-right
			margin-left 20px 
			text-align left
			p
				text-align left !important

@media (min-width 321px) and (max-width 480px)
	.footer-blocks
		.block-center
			margin-right 20px
	