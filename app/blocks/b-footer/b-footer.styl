.footer
	background bgcolorMF url('../../blocks/b-footer/b-footer/footer-bg.png') no-repeat center center
	padding 60px 0
.footer-blocks
	display flex
	flex-direction row
	justify-content space-between
.footer-blocks__head
	display block
	color #fff
	font-size 1.14rem
	font-weight 700
	text-transform uppercase
.footer-blocks__description
	color #fff
	font-size 1rem


.footer-blocks__left-link
	display block
.footer-blocks__center-head
.footer-blocks__right-head
	margin-bottom 40px
.footer-blocks__center-icon
.footer-blocks__right-icon
.footer-blocks__left-icon
	margin-bottom 20px
.footer-blocks__right-description
	margin 0
	width 200px
	text-align right
.footer-blocks__center-social-icon
	margin 0 10px
	transform rotate(0deg)
	transition all .5s ease
	&:hover
		transform rotate(360deg)
		
.text-left
	text-align left
	
.text-right
	text-align right
	
.text-center
	text-align center
	
.footer-end
	background-color bgcolorFb
	padding 25px 0
	color #fff
	text-transform uppercase
	letter-spacing 2px
	border-bottom 2px solid btncolor
	
.btn-toTop
	padding 5px 10px
	border 2px solid btncolor
	position fixed
	right 5%
	bottom 30px
	cursor pointer
	border-radius 8px
	z-index 999
	display none
	transition all .5s ease
	&:hover
		background-color bgcolorMF
		border 2px solid bgcolorMF

.nav-pagination
	position fixed
	bottom 43%
	right 20px
	z-index 999
.nav-pagination__link
	display block
	width 18px
	height 18px
	background-color bgcolorMF
	border-radius 50%
	margin-bottom 10px	
	cursor pointer
	opacity .5
.nav-pagination__link_active
	background-color btncolor
	opacity 1

.modal
	display none
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	overflow hidden
	background-color rgba(0,0,0, 0.8)
	z-index 9999
.modal-content
	position relative
	background-color #fefefe
	margin 10% auto
	padding 20px
	border 1px solid #888
	width 20%
	border-radius 10px
.modal-content__head
	text-transform uppercase
	margin-top 0
	font-size  2rem
.modal-content__label
	display block
	text-align center
	padding 10px
	text-transform uppercase
	font-weight 700
	font-size 1.2rem
.modal-content__input
	outline none
	border none
	border-bottom 1px solid #e5e5e5
	width 80%
	&::placeholder
		font-style italic
		padding 0 0 0 10px
.modal-content__button-modal
	margin 10px	
	padding 10px 20px		
			
.modal-content__close
	position absolute
	top -40px
	right 0
	color #fff
	font-size 28px
	font-weight 700
	cursor pointer
	
@media (max-width 1024px)
	.footer-blocks__left
		margin-left 20px
	.footer-blocks__right
		margin-right 20px
	.modal-content
		width 40%

@media (max-width 480px)
	.modal-content
		width 70%
	.nav-pagination
		display none
	.footer-blocks
		flex-wrap wrap
	.footer-blocks__head
	.footer-blocks__description
		font-size 1.4rem
		font-size 1.4rem
	.footer-blocks__left-icon
		margin-bottom 10px
	.footer-blocks__left-link
		.footer-blocks__left-icon
			width 70%
	.footer-blocks__center-head
	.footer-blocks__right-head
		margin-bottom 50px !important
	.footer-blocks__center-icon
	.footer-blocks__right-icon 
		margin-bottom 20px !important
	.footer-blocks__right
		margin-left 20px 
		text-align left
	.footer-blocks__right-description
		text-align left !important

@media (min-width 321px) and (max-width 480px)
	.footer-blocks__center
		margin-right 20px
	