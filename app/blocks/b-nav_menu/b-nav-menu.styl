.nav
	background-color bgcolorMF
	position fixed
	width 100%
	height 120px
	z-index 4
	
.container
	max-width 1400px
	margin 0 auto
	position relative
.nav__logo
	float left
	padding-top 39px

.menu__ul
	margin 0
	display flex
	flex-wrap nowrap
	justify-content space-around
	
	li
		margin-right 20px
		text-align center
		flex: 1
		font-size (14.47/14)rem
		list-style none
		
		a
			display block
			width 100%
			height 67px
			text-decoration none
			color menucolor
			text-transform uppercase
			padding 50px 0 0 0

			&:hover
				border-bottom 3px solid btncolor
			
			&:focus
				background-color bgcolorFb
				border-bottom 3px solid btncolor
				color #6b848c
						
.nav__phone
	float right
	padding-top 26px
	a
		display block
		font-size (24/14)rem
		font-weight  700
		color #ff8207
		text-decoration none
		margin-bottom 10px
		
.nav__burg
	display none
	.burg
		float right
		margin 40px 20px 0 0 
		span
			display block
			width 40px
			background-color btncolor
			height 4px
			margin-bottom 8px
			transform rotate(0deg)
			transition transform .3s ease
		a:hover > span
			transform rotate(180deg)
			
.span--focused
	transform rotate(90deg)
			
.nav__hidmnu
	display none
	position absolute
	right 0
	top 120px
	width 100%
	background-color bgcolorMF	
	.hidmnu__ul
		padding 0
		text-align center
		li
			margin auto
			display block
			width 90%
			padding-bottom 10px
			margin-bottom 10px
			border-bottom 1px solid #eee
			&:last-child
				border-bottom none
				margin-bottom 0
			a
				color btncolor
				text-decoration none
				font-size 1.8rem
		
@media (max-width 1024px)
	html
		font-size 12px
	.menu__ul
		padding 0
			
	.nav__logo
		margin-left 10px
		img
			width 80%
		
	.nav__phone
		margin-right 10px

			
@media (max-width 768px)
	html
		font-size 12px
	.nav__phone
		display none
	.nav__menu
		display none
	.nav__logo
		margin-left 20px
		padding-top 40px
		img
			width 100%
			
	.nav__burg
		display block
		
@media (max-width 320px)
	html
		font-size 8px