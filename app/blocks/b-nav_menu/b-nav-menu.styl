.nav
	background-color bgcolorMF
	position fixed
	width 100%
	height 120px
	z-index 4
	
.container
	max-width 1400px
	margin 0 auto
	position relative
.nav-blocks
	display flex
	flex-direction row
	justify-content space-around
	align-items center
	height 120px
.nav-blocks__menu-ul
	margin 0
	padding 0
	display flex
	justify-content space-around
	height 120px
	
	li
		margin-right 20px
		text-align center
		width 120px
		font-size 1.03rem
		list-style none
		&:last-child
			margin-right 0
		
		a
			display block
			height 67px
			text-decoration none
			color menucolor
			text-transform uppercase
			padding 50px 0 0 0

			&:hover
				border-bottom 3px solid btncolor
			
			&:focus
				background-color bgcolorFb
				border-bottom 3px solid btncolor
				color #6b848c

.focused
	background-color bgcolorFb
	border-bottom 3px solid btncolor
	color #6b848c
	transition background-color 1s ease
						
.nav-blocks__phone
	a
		display block
		font-size 1.7rem
		font-weight  700
		color #ff8207
		text-decoration none
		margin-bottom 10px
		
.nav-burg
	display none
	.nav-burg__span
		float right
		margin 40px 20px 0 0 
		span
			display block
			width 40px
			background-color btncolor
			height 4px
			margin-bottom 8px
			border-radius 2px		
					
.menu-hidden
	position absolute
	right 0
	top 80px
	width 100%
	transform translateY(-1000px)
	background-color bgcolorMF	
	transition all .3s ease
	z-index -1
	&__ul
		padding 0
		text-align center
		li
			margin auto
			display block
			width 90%
			padding-bottom 10px
			margin-bottom 10px
			border-bottom 1px solid #eee
			&:last-child
				border-bottom none
				margin-bottom 0
			a
				color btncolor
				text-decoration none
				font-size 1.8rem

.menu-hidden_active
	transform translateY(0px)
	width 100%
	
@media (max-width 1196px)
	html
		font-size 12px
	.nav
		height 80px
	.nav-blocks
		height 45px
		justify-content space-between
	.nav-blocks__phone
		display none
	.nav-blocks__menu
		display none
	.nav-blocks__logo
		margin-left 20px
		padding-top 40px
		img
			width 100%
	
	.nav-burg
		display block
		
@media (min-width 0px) and (max-width 480px)
	html
		font-size 8px
		
@media (min-width 481px) and (max-width 768px)
	html
		font-size 10px