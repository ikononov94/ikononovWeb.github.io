.swiper
	width 100vw
	height 100vh
	min-height 800px
	padding-top 200px
	background url('../../blocks/b-main/b-main/main-bg.jpg') no-repeat center center
	border-bottom 2px solid btncolor
.swiper-container
	height 800px
	max-width 1400px	

.swiper-slide
	text-align center
	height 100%
	position relative
	

.swiper-button-prev
	background-image url("../../blocks/b-main/b-main/arrow-prev.png")
	left 6%
	
.swiper-button-next
	background-image url("../../blocks/b-main/b-main/arrow-next.png")
	right 6%

.swiper-pagination-bullet
	width 16px
	height 16px
	background bgcolorMF
	opacity 1
	
.swiper-pagination-bullet-active
	background btncolor
	
.main-title
	position relative
	z-index 1
	color bgcolorMF
	width 60%
	margin 0 auto
	text-transform uppercase
	letter-spacing 1.43rem
	h1
		font-size 3.1rem
		margin 0
		padding-bottom 35px
.title-delimiter
	position relative
	display flex
	justify-content center
	align-items center
	&:before
	&:after
		content ''
		display inline-block
		width 50%
		height 2px
		background bgcolorMF
		position relative
	&:before
		right 5px
		margin 0 0 0 -100%
	&:after
		left 5px
		margin 0 -100% 0 0 

.main-description
	font-size 1.7rem
	text-transform uppercase
	line-height 2
	color rgba(bgcolorMF, 0.7)
	width 50%
	margin 0 auto
	padding 40px 0 175px
	
.button
	position relative
	text-transform uppercase
	background-color btncolor
	color #fff
	text-decoration none
	border-radius 5px
	transition all 1s ease
	&-size-l
		font-size 1.8rem
		letter-spacing 2px
		font-weight 700
		padding 20px 30px
	&:hover
		background-color darken(btncolor, 20%)
	
.swiper-container-horizontal>.swiper-pagination-bullets
.swiper-pagination-custom
.swiper-pagination-fraction
	bottom 150px
	
@media (min-width 0px) and (max-width 480px)
	.main-title
		width 90%
	.main-description
		width 70%
		padding-bottom 50px
	.swiper
		min-height 500px
	.swiper-container
		height 500px
	
	.swiper-container-horizontal>.swiper-pagination-bullets
	.swiper-pagination-custom
	.swiper-pagination-fraction
		bottom 40px
		

@media (min-width 481px) and (max-width 920px)
	.swiper-container-horizontal>.swiper-pagination-bullets
	.swiper-pagination-custom
	.swiper-pagination-fraction
		bottom 20px