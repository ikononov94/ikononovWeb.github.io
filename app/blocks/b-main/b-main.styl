.swiper
	width 100vw
	height 100vh
	min-height 1000px
	background url('../../blocks/b-main/b-main/main-bg.jpg') no-repeat center center
	border-bottom 2px solid btncolor
.swiper-container
	height 1000px
	max-width 1400px	

.swiper-slide
	text-align center
	height 100%
	position relative
	padding-top 200px

.swiper-button-prev
	background-image url("../../blocks/b-main/b-main/arrow-prev.png")
	left 6%
	
.swiper-button-next
	background-image url("../../blocks/b-main/b-main/arrow-next.png")
	right 6%

.swiper-pagination-bullet
	width 16px
	height 16px
	background bgcolorMF
	opacity 1
	
.swiper-pagination-bullet-active
	background btncolor
	
.main-title
	position relative
	z-index 1
	color bgcolorMF
	width 60%
	margin 0 auto
	text-transform uppercase
	letter-spacing (20/14)rem
	font-weight bold
	h1
		font-size (43.08/14)rem
		margin 0
		padding-bottom 35px
.title-delimiter
	background-color transparent
	position relative
	z-index 1
	text-align center
	&:before
	&:after
		content ''
		display inline-block
		width 50%
		height 2px
		background bgcolorMF
		z-index -1
		position relative
		vertical-align middle
	&:before
		right 5px
		margin 0 0 0 -100%
	&:after
		left 5px
		margin 0 -100% 0 0 

.main-description
	font-size (24.03/14)rem
	text-transform uppercase
	line-height 35px
	color bgcolorMF
	opacity .7
	width 50%
	margin 0 auto
	padding 40px 0 175px
	
.button
	position relative
	text-transform uppercase
	background-color btncolor
	color #fff
	text-decoration none
	border-radius 5px
	&-size-l
		font-size (25/14)rem
		letter-spacing 2px
		font-weight bold
		padding 20px 30px
	
.swiper-container-horizontal>.swiper-pagination-bullets
.swiper-pagination-custom
.swiper-pagination-fraction
	bottom 150px
	
@media (max-width 1024px)
	.main-title
		h1
			font-size (30.08/12)rem
	.main-description
		font-size  (15/12)rem
	.button-size-l
		font-size (15/12)rem