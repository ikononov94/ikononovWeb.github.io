.swiper
	width 100vw
	height 100vh
	min-height 800px
	padding-top 200px
	background url('../../blocks/b-main/b-main/main-bg.jpg') no-repeat center center
	border-bottom 2px solid btncolor
.swiper-container
	height 800px
	max-width 1400px	

.swiper-slide
	text-align center
	height 100%
	position relative
	
.swiper-button-prev
	background-image url("../../blocks/b-main/b-main/arrow-prev.png")
	left 6%
	
.swiper-button-next
	background-image url("../../blocks/b-main/b-main/arrow-next.png")
	right 6%

.swiper-pagination-bullet
	width 16px
	height 16px
	background bgcolorMF
	opacity 1
	
.swiper-pagination-bullet-active
	background btncolor
	
.main-title
	position relative
	z-index 1
	color bgcolorMF
	width 60%
	margin 0 auto
	text-transform uppercase
	letter-spacing 1.43rem
.main-title__head
	font-size 3.1rem
	margin 0
	padding-bottom 35px
.title-delimiter
	position relative
	display flex
	justify-content center
	align-items center
	&:before
	&:after
		content ''
		display inline-block
		width 50%
		height 2px
		background bgcolorMF
		position relative
	&:before
		right 5px
		margin 0 0 0 -100%
	&:after
		left 5px
		margin 0 -100% 0 0 

.swiper__description
	font-size 1.7rem
	text-transform uppercase
	line-height 2
	color rgba(bgcolorMF, 0.7)
	width 50%
	margin 0 auto
	padding 40px 0 175px
	
.button
	position relative
	text-transform uppercase
	background-color btncolor
	color #fff
	text-decoration none
	border-radius 5px
	transition all 1s ease
	border none
	cursor pointer
	outline none
	&:hover
		background-color darken(btncolor, 20%)
.swiper-slide__button_size_l
	font-size 1.8rem
	letter-spacing 2px
	font-weight 700
	padding 20px 30px
.swiper__button-bottom
	position absolute
	text-align center
	bottom 50px
	width 100%
	z-index 999
.swiper__button-bottom-link
	display block
	width 50px
	height 50px
	margin 0 auto
	border-radius 50%
	background-color rgba(bgcolorFb, 0.7)
	cursor pointer
	&:hover > .swiper__button-bottom-icon
		animation btn-bottom 1.5s ease-in-out infinite
.swiper__button-bottom-icon
	display block
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	margin auto
	animation-play-state paused
		
	
@keyframes btn-bottom
	0% 
		top 0
	50%
		top 20px
	100%
		top 0
	
	
.swiper-container-horizontal>.swiper-pagination-bullets
.swiper-pagination-custom
.swiper-pagination-fraction
	bottom 150px
	
@media (min-width 0px) and (max-width 480px)
	.main-title
		width 90%
	.main-description
		width 70%
		padding-bottom 50px
	.swiper
		padding-top 100px
		min-height 600px
	.swiper-container
		height 100%
	
	.swiper-container-horizontal>.swiper-pagination-bullets
	.swiper-pagination-custom
	.swiper-pagination-fraction
		bottom 100px
		
	.swiper__button-bottom
		bottom 10px
@media (min-width 481px) and (max-width 920px)
	.swiper
		padding-top 150px
	.swiper-container
		height 100%
	.swiper-container-horizontal>.swiper-pagination-bullets
	.swiper-pagination-custom
	.swiper-pagination-fraction
		bottom 120px
		
	.swiper__button-bottom
		bottom 50px