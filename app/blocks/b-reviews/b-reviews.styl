.reviews
	padding-bottom 98px
.container-reviews
	max-width 940px
	margin 0 auto
.reviews-blocks
	display flex
	flex-decoration row
	flex-wrap nowrap
	flex 1
	span
		font-size (24/14)rem
		text-transform uppercase
		display block
		font-weight bold
	p
		color #999999
		font-size (18/14)rem
		font-weight bold
	.block-left
		width 80%
		span
			color btncolor
	.block-right
		width 100%
		span
			color bgcolorMF
		input
		textarea
			margin 1.3em 0 1.3em 0
			width 100%
			outline none
			border 0
			border-bottom 1px solid #e5e5e5
			font-size (18/14)rem
			color #999999
			&::placeholder
				font-size (18/14)rem
				color #999999
				font-style italic
		.right-photo
			padding-bottom 1.3em
			span
				line-height 60px
		.right-capcha
			.capcha-in
				width 55%
			
			.capcha-btn
				display flex
				flex-direction row
				justify-content space-between
				align-items flex-end
		
.button-size-s
	border 0
	font-size (30/14)rem
	padding 10px 15px
	outline none
	cursor pointer
.button-size-m
	border 0
	font-size (18/14)rem
	letter-spacing 1px
	
	padding 20px 45px
	outline none
	cursor pointer
.btn-rev
	float left
	margin-right 20px
	
.btn-form
	float right