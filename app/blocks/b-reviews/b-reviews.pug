section#navreviews.reviews
	.container
		.section__title
				h2(class="reviews-h2") Оставьте отзыв
				span
					img(src="./blocks/b-jobs/b-jobs/separator.png" alt="")
				p  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Omnis blanditiis similique libero, vero doloribus, beatae quis laudantium obcaecati. Eligendi ab expedita, libero quo nisi iure sed eius aut earum commodi.
		.container-reviews
			.reviews-blocks
				.block-left
					.left-address
						span Наш адрес
						p г.Минск, ул. Скрыганова, 6А, 4 этаж
					.left-phones
						span Звоните
						p +375 (29) 123-45-67,  +375 (33) 123-45-67
					.left-email
						span Пишите
						p info@promo-webcom.by
				.block-right
					form(action="" name="form" novalidate)
						.right-name
							label(for="name") Ваше имя
							input(type="text" name="name" placeholder="Иванов Иван")
						.right-email
							label(for="email") E-mail
							input(type="text" name="email" placeholder="example@mysite.com")
						.right-office
							label(for="office") Ваша должность
							input(type="text" name="office" placeholder="Должность")
						.right-review
							label(for="review") Отзыв
							textarea(type="text" name="review" rows="5" placeholder="Ваше сообщение" resize )
						.right-photo
							a(href="#" class="button button-size-s btn-rev") +
							span Фото
						.right-capcha
							.capcha-in
								label(for="capcha") Введите код с картинки
								input(type="text" name="capcha")
							.capcha-btn
								img(src="./blocks/b-reviews/b-reviews/capcha.png" alt="capcha")
								button(type="button" onclick="validate(this.form)" class="button button-size-m btn-form") Отправить
